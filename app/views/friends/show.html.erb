<div class="card">
  <div class="card-body">
    <h1 class="card-title">  <%= @friend.first_name %>   <%= @friend.last_name %></h1>
    <p class="card-text">  
      <%= @friend.email %> |   <%= @friend.phone %> |   <%= @friend.twitter %>
    </p>

    <br/>

    <p class="lead">
      <%= link_to 'Edit', edit_friend_path(@friend), class:'btn btn-success' %> 
      <%= link_to 'Delete', @friend, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger"%>
      <%= link_to 'Back', friends_path, class:'btn btn-dark' %>
    </p>
  </div>
</div>
